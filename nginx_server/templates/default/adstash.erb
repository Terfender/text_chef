server {
        listen 80;

        passenger_enabled on;
        passenger_app_env production;

        root /home/ubuntu/apps/<%= @app_name %>/current/public;
        passenger_app_root /home/ubuntu/apps/<%= @app_name %>/current;

        location = /elb_ping {
               alias /home/ubuntu/apps/elb_ping/;
               autoindex on;
        }
}
